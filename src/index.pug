extends ./layouts/main

mixin worker-card(photo, name, position)
    .worker-card
        img(src=photo).worker-card__photo
        .worker-card__name= name
        .worker-card__position= position

block content
    body.page
        header.header.page__header
            .header__row
                .logo
                    a(href="#").logo__link
                        img(src="./img/logo.png").logo__img
                nav.menu.header__menu
                    ul.menu__list
                        li.menu__item
                            a.menu__link(href="#anchor-problem") the problem
                        .menu__spacer |
                        li.menu__item
                            a.menu__link(href="#anchor-PiedPiperCoin") PiedPiperCoin
                        .menu__spacer |
                        li.menu__item
                            a.menu__link(href="#anchor-team") the team
        section.hero.page__first-section
            .hero_background_dark
                .hero__container
                    h2.hero__title PiperNet Is Here
        .page__anchor#anchor-problem
        section.simple-screen.simple-screen_background-color_grey
            .simple-screen__container
                h1.simple-screen__title The Problem
                p.simple-screen__paragraph
                    | Beneath the flashy homepages of your favorite
                    | sites lurk Hooli™ and other evil corporations out
                    | to hoard and sell your most personal data.
                p.simple-screen__paragraph
                    | What was built to be the ultimate platform for
                    | the free sharing of knowledge has turned into a
                    | money-hungry monster feasting on our privacy and
                    | freedom.
                p.simple-screen__paragraph
                    | But fear not, for Pied Piper has the answer!
                    | And it’s simple: An autonomous peer-to-peer
                    | network featuring distributed storage powered by
                    | universal compression, accelerated scheduling
                    | allocation, and end-to-end encryption.
                p.simple-screen__paragraph
                    | Put even simpler — <b>it’s the internet,
                    | completely decentralized.</b>
        section.hero
            .hero_background_light
                .hero__container
                    .hero__offer
                        | We’re in this together! All of our computers
                        | and phones join in a network to make the strongest
                        | supercomputer the world has ever seen.
        .page__anchor#anchor-PiedPiperCoin
        section.simple-screen
            .simple-screen__container
                h1.simple-screen__title Introducing PiedPiperCoin
                .simple-screen__simple-row
                    img(src="./img/icon.png").simple-screen__icon
                    p.simple-screen__paragraph.simple-screen__paragraph_standart-indent_48
                        | Pied Piper's new internet is built for users, by users.
                        | You supply the storage, compute, and networking
                        | resources that power our entire decentralized web.
                p.simple-screen__paragraph
                    | Now there's a way to give credit where credit is due.
                    | Compute credit, that is! The more you share your device
                    | resources, the more PiedPiperCoin you receive.
                p.simple-screen__paragraph
                    | Whether you're a developer with an app ready for market,
                    | or just an Average Joe with a smartphone you'll love all
                    | you can do with PiedPiperCoin.
        .page__anchor#anchor-team
        section.simple-screen.simple-screen_background-color_grey
            .simple-screen__container
                h1.simple-screen__title The Team
                .team
                    +worker-card("./img/workers/1.png", "Richard Hendricks", "Founder & CEO")
                    +worker-card("./img/workers/2.png", "Dinesh Chugtai", "Senior Programmer")
                    +worker-card("./img/workers/3.png", "Bertram Gilfoyle", "Chief Systems Architect")
                    +worker-card("./img/workers/5.png", "Jared Dunn", "Chief Operating Officer")
                    +worker-card("./img/workers/4.png", "Monica Hall", "Chief Financial Officer")
                    +worker-card("./img/workers/6.png", "Nelson Bighetti", "Majority Investor")
        footer.footer
            .footer__container
                .footer__text
                    | All other trademarks and copyrights are the property
                    | of their respective owners. Use of these names, trademarks
                    | and brands does not imply endorsement.